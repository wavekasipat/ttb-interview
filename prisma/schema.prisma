// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model api_client {
  id     String @id @default(uuid())
  secret String
}

model customer {
  id           String @id @default(uuid())
  name         String
  surname      String
  citizen_id   String @unique
  facial_image String
}

model system_log {
  id        String   @id @default(uuid())
  timestamp DateTime
  message   String
  level     String
  url       String
}
